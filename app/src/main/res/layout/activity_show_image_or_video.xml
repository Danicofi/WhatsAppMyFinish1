<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardviewOptions"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activitys.ShowImageOrVideo"
    app:cardBackgroundColor="@color/black">

    <LinearLayout
        android:id="@+id/linearLayoutViewPagerShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewPictureShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/chatwats"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:visibility="gone"
            />

        <FrameLayout
            android:id="@+id/frameLayoutVideoShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:visibility="visible">

            <VideoView
                android:id="@+id/videoViewShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <View
                android:id="@+id/viewVideoShow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_view"
                android:backgroundTint="@color/black"
                android:alpha="0.7"/>

            <ImageView
                android:id="@+id/imageViewVideoShow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_play"
                android:layout_gravity="center"/>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            android:alpha="0.4"/>

        <ImageView
            android:id="@+id/imageViewBackShow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

    </FrameLayout>





</androidx.cardview.widget.CardView>